extends ../_template

block variables
    - var title = 'Блог'

block content

    include ../common/_variables

    .wrapper

        main.content

            header.hero
                video(src='assets/img/night.mp4' autoplay muted playsinline loop).hero__video-file
                .hero__bg
                .hero__section
                    img(src='assets/img/stars.png' alt='').hero__section-pic
                .hero__container
                    .user
                        .user__avatar-box
                            img.user__avatar(src='assets/img/avatar.png')
                        p.hero__title Блог
                        p.hero__desc Статьи, которые я написал
                .hero__socials
                    +socials('socials', socialsList)
                a.hamburger(hreg='#')
                    span.hamburger__icon
                +svg('button-arrow-down','arrow_down')
                nav.menu
                    .menu__container
                        +menu('menu', menu)

            section.blog

                .blog__triangles.triangles
                    svg(viewBox='0 0 1000 110' preserveAspectRatio='none').triangles__svg
                        polygon(points='0,0 0,110 500,110').blog__triangles-left
                        polygon(points='500,110 1000,0 1000,110').blog__triangles-right

                .blog__main

                    aside.blog__col-left
                        nav.blog-nav
                            +menu('blog-nav', postsNav, 0)
                            .blog__swipe-area

                    .blog__col-right
                        .blog__posts
                            each post in posts
                                article.post
                                    .post__title= post.title
                                    .post__date= post.date
                                    .post__text !{post.body}



        include ../common/footer